package WhileLoops;

import java.util.Scanner;

public class CollatzSequence {
	public static void main(String[] args) {
		Scanner keys = new Scanner(System.in);
		int num = keys.nextInt();
		
		do{
			if(num%2 == 0)
				num = num / 2;
			else
				num = (num*3) + 1;
			System.out.print(num);
		} while(num != 1);
		keys.close();
	}
}
